
latest_version=$(curl -s https://cdimage.kali.org/ --list-only | \
grep href | sed 's/.*href="//' | sed 's/".*//' | grep '^kali-[0-9.].*' | sed -e 's#/$##' -e 's#kali-##' | sort -n | tail -n 1)

source_url="https://cdimage.kali.org/kali-$latest_version/kali-linux-light-$latest_version-amd64.iso"

FILE_REGEX="kali-linux-mini-([0-9.-]+)-amd64.iso$"

